        <include>**/*TestCase.java</include>
      </includes>
      <resources>
         <resource>
            <directory>${pom.build.unitTestSourceDirectory}</directory>
            <includes>
              <include>**/*.xml</include>
            </includes>
         </resource>
        <resource>
           <directory>${pom.build.sourceDirectory}</directory>
           <includes>
             <include>**/*.dtd</include>
           </includes>
        </resource>
      </resources>
    </unitTest>

    <resources>
      <resource>
         <directory>${pom.build.sourceDirectory}</directory>
         <includes>
           <include>**/*.dtd</include>
         </includes>
      </resource>
    </resources>
  </build>

